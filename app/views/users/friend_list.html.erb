<h1>好友名單</h1><br>
<br>

<% @friends.each do |friend| %>
  <div class="col-md-3 col-sm-4 col-xs-6 text-center user-item">
    <%= link_to user_path(friend) do %>
      <%= image_tag("http://via.placeholder.com/128x128", class: "img-rounded") %>
      <h4><%= friend.name %></h4>
    <% end %>
  </div>
<% end %>
