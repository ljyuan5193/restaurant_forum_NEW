<h1>美食達人</h1><br>
<div class="container">
  <div class="row">
      <ul class="nav nav-tabs">
       <li role="presentation">
       <%= link_to '首頁', root_path %>
       </li>

       <li role="presentation">
       <%= link_to '最新動態', feeds_restaurants_path %>
       </li>

        <li role="presentation">
        <%= link_to 'TOP 10 人氣餐廳', ranking_restaurants_path %>
        </li>

        <li role="presentation" class="active">
        <%= link_to '美食達人', users_path %>
        </li>

      </ul>
  </div>
</div>
<br>

<% @users.each do |user| %>
<% if user != current_user %>
  <div class="col-md-3 col-sm-4 col-xs-6 text-center user-item">
    <%= link_to user_path(user) do %>
      <%= image_tag("http://via.placeholder.com/128x128", class: "img-rounded") %>
      <h4><%= user.name %></h4>
      <% end %>
      <%= render partial: "shared/follow", locals: {user: user} %>
  </div>
  <% end %>
<% end %>
