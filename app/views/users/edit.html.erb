<%= form_for @user do |f| %>
<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true %>
</div>

<div class="field">
  <%= f.label :intro %><br />
  <%= f.text_field :intro %>
</div>

 <div class="form-group">
<%= f.label :avatar, "大頭照上傳" %>
<%= image_tag @user.avatar if @user.avatar? %>
<%= f.file_field :avatar %>
</div>

  <%= f.submit "Update" %>
<% end %>
