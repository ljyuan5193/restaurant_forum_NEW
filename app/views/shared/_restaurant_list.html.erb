
<% @restaurants.each do |restaurant| %>
<div class="col-sm-6 col-md-4">
  <div class="restaurant-item">
    <%= image_tag restaurant.image, class: "img-responsive center-block" %>
     <% fake_value =restaurant.id - Restaurant.first.id + 1 %>
      <%  if fake_value > 9 %>
       <% fake_value%=9 %>
       <% end %>
       <%= image_tag("http://lorempixel.com/300/300/food/" + fake_value.to_s) %>
       <div class="caption">
       <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
       <p class="label label-default"><%= restaurant.category.name %><p>
       <p><%= truncate(restaurant.description, length: 70) %></p>
       <%= render partial: "shared/favorite", locals: {restaurant:restaurant} %>
       <%= render partial: "shared/like", locals: {restaurant: restaurant} %>
      </div>
    </div>
  </div>
<% end %>

<div class="text-center">
  <%= paginate @restaurants %>
</div>
  <li>有<%=  Restaurant.like.count %>人收藏這家餐廳</li>
